.row
  .col-lg-12
    %h1.centered These areas are good matches for you
= render partial: 'pages/area', collection: areas, locals: {council: params[:council]}
.row.clear-top
  .col-lg-4.col-lg-offset-4
    - if params[:council] == 'true'
      %a.btn.btn-default.centered{href: url_for(params.merge(council: false))}
        Switch to user mode
    - else
      %a.btn.btn-default.centered{href: url_for(params.merge(council: true))}
        Switch to council mode